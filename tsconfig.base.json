{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["ES2017", "DOM"],
    "declaration": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "pretty": true
  },
  "include": [],
  "references": [
    { "path": "./packages/core" },
    { "path": "./packages/router" }
  ]
}
